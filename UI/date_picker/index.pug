append style
  link(rel="stylesheet", href="UI/date_picker/style.scss")

append script
  script(type="text/javascript" src='UI/date_picker/script.js')


mixin date_picker__row(className="date_picker__cell",...items)
  div.date_picker__row
    each item in items
      div.date_picker__cell
        div(class=className)
          span.date_picker__span= item

mixin date_picker(sel_from=null, sel_to=null)
  div(selection_from=sel_from, selection_to=sel_to).date_picker__container
    div.date_picker__container_from_to
      div.date_picker__caption 19.08.21
      div.date_picker__button 
    div.date_picker__container_from_to
      div.date_picker__caption 19.09.22
      div.date_picker__button 
    div.date_picker__popup_container
      div.date_picker__popup_month_switcher
        div.date_picker__popup_month_button 
        div.date_picker__popup_month_title Месяц
        div.date_picker__popup_month_button 
      div.date_picker__month_table
        +date_picker__row("date_picker__week_item", "пн", "вт", "ср", "чт", "пт", "сб", "вс")
        +date_picker__row("", "1", "2", "3", "4", "5", "6", "7")
        +date_picker__row("", "8", "9", "10", "11", "12", "13", "14")
        +date_picker__row("", "15", "16", "17", "18", "19", "20", "21")
        +date_picker__row("", "22", "23", "24", "25", "26", "27", "28")
        +date_picker__row("", "29", "30", "31", "1", "2", "3", "4")
        +date_picker__row("", "5", "6", "7", "8", "9", "10", "11")
      div.date_picker__footer buttons